# Telegram Bot (선택 - 비워두면 대시보드만 실행됨)
TELEGRAM_BOT_TOKEN=

# Moralis API (EVM 체인용 - 지갑 추적 + 대시보드)
# 무료 가입: https://admin.moralis.io/
MORALIS_API_KEY=your_moralis_api_key_here

# Helius API (Solana용)
# 무료 가입: https://helius.dev/
HELIUS_API_KEY=your_helius_api_key_here
# 웹훅 인증 시크릿 (선택사항, 보안 강화용)
HELIUS_WEBHOOK_SECRET=your_random_secret_here

# Webhook Server
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# Dashboard (웹 대시보드 on/off)
DASHBOARD_ENABLED=true
DASHBOARD_PATH=../frontend/dist

# Database
DATABASE_PATH=./data/wallets.db

# Logging
LOG_LEVEL=INFO

